.section-checkbox
	display block
	width 770px
	margin-top 69px
	float left
	&__title
		font-size 24px
		font-weight bold
		float left
	&__text-main
		font-size 15px
		width 755px
		line-height 1.3
		color #464542
		margin-top 13px
		float left
	.section-checkbox-form
		width 100%
		font-size 21px
		font-weight bold
		margin-top 33px
		float left
		.section-checkbox-form-column
			float left
			&_01_width
				width 258px
			&_02_width
				width 270px
			&_03_width
				width 242px
			&__skill-el
				width 100%
				&_position
					float left
					margin-bottom 17px
			&__check-element_position
				position relative
			&__name-skill_position
				float left
				margin-left 29px
			&__img_position
				position absolute
				top 0px
				left 0px
			&__input-checkbox
				opacity 0
				&_position
					position absolute
					top 2px
					left 3px
					z-index 1000
			&__checked
				font-size 30px
				color #2f1b15
				font-style italic
				opacity 0
				&_position
					position absolute
					top -10px
					left 0px
			&__input-checkbox:checked~.section-checkbox-form-column__checked
				opacity 1
