.date-form
	display block
	width auto
	height 39px
	&_position
		position relative
	&__label
		width auto
		font-size 23px
		font-weight bold
		&_position
			position absolute
			bottom 0px
	&__input
		width 206px
		font-family 'Courier New', sans-serif
		color #231f20
		font-size 30px
		font-weight normal
		border none
		border-bottom 3px solid #42261f
		background none
		&_position
			padding 0 0 5px 14px
			position absolute
			left 181px
			bottom 4px
